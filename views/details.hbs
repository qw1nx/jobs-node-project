<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <!-- Do not forget to change the path to the image -->
            <img src="/static/img/man.png" alt="details-image">
        </article>

        <article class="details-page-card-content">
            <p>Author: {{post.authorEmail}}</p>
            <h2>Headline: {{post.headline}}</h2>
            <h3>Company name: {{post.companyName}}</h3>
            <h4>Company description: {{post.companyDescription}}</h4>
            <h5>Location: {{post.location}}</h5>

            <article class="details-page-card-buttons">
                <!--only for registered users and author of the ad-->
                {{#if hasUser}}
                    {{#if post.isAuthor}}
                        <a href="/edit/{{post._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{post._id}}" class="btn-delete">Delete</a>
                    {{else}}
                        {{#if post.hasApplied}}
                            <p class="already-applied">You have already applied!</p>
                        {{else}}
                            <a href="/apply/{{post._id}}" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, {{post.applicantsNum}} people have already applied.</p>
                        {{/if}}
                    {{/if}}
                {{/if}}

            </article>
        </article>

    </article>
</section>

{{#if post.isAuthor}}
    <section id="info-about-candidates">
        <h2>Candidates for this ad:</h2>
        <!\--If there are people who have applied, show each of them in the following format--\>
        {{#if applicants}}
            {{#each applicants}}
                {{>applicantsPartial}}
            {{/each}}
        {{/if}}
    </section>
{{/if}}

